@{
    ViewData["Title"] = "MainDashboard";
}

@model MVC_ASP.Models.pemesanan_tiket
<div class="main">
    <h1>Cari Tiket </h1>
</div>
<form asp-controller="Home" asp-action="PilihTiket" class="mainDashboard">
    <div class="form-group">
        <label asp-for="dari">Dari</label>
        <input type="text" asp-for="dari" class="form-control" id="dari" placeholder="Dari" />
    </div>
    <div class="form-group">
        <label asp-for="ke">Ke</label>
        <input type="text" asp-for="ke" class="form-control" id="ke" placeholder="Ke">
    </div>
    <div class="form-group">
        <label asp-for="jumlah_penumpang">Jumlah Penumpang</label>
        <input type="text" asp-for="jumlah_penumpang" class="form-control" id="jumlah" placeholder="Jumlah Penumpang">
    </div>
    <div class="form-group">
        <label asp-for="tanggal_pergi">Tanggal Pergi</label>
        <input type="date" asp-for="tanggal_pergi" class="form-control" id="tanggal" placeholder="Tanggal Pergi">
    </div>
    <div class="form-group">
        <label asp-for="kelas_penerbangan">Kelas Penerbangan</label>
        <select asp-for="kelas_penerbangan" class="form-control" id="kelas">
            <option>Ekonomi</option>
            <option>Ekonomi Premium</option>
            <option>Bisnis</option>
            <option>First Class</option>
        </select>
    </div>
    @*<button id="cariTiket" type="submit" class="btn btn-primary">Cari Tiket</button>*@
    <button id="submitLogin" type="submit" class="button-67" role="button">Cari Tiket</button>
</form>