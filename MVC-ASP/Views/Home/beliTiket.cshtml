@{
    ViewData["Title"] = "Data Pemesanan";
}
@model MVC_ASP.Models.cekOrder1

<div class="data_pemesanan">
    <h1>Pesanan Tiket Pesawat</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID Tiket</th>
            @*<th scope="col">No Penerbanga</th>*@
            <th scope="col">Maskapai</th>
            <th scope="col">Dari</th>
            <th scope="col">Ke</th>
            <th scope="col">Jam Keberangkatan</th>
            <th scope="col">Waktu Tiba</th>
            <th scope="col">Tanggal Berangkat</th>
            <th scope="col">Harga</th>
            <th scope="col">Username</th>
            <th scope="col">Bangku</th>
            

            

        </tr>
    </thead>
    <tbody>
        @{
            var data = (List<cekOrder1>)ViewData["data"]!;
            //var data1 = (List<cekOrder1>)ViewData["data"]!;
            foreach (var user in data)
            {
                <tr>
                    <td>@user.id_tiket</td>
                    
                    <td>@user.maskapai</td>
                    <td>@user.dari</td>
                    <td>@user.ke</td>
                    <td>@user.jam_keberangkatan</td>
                    <td>@user.waktu_tiba</td>
                    <td>@user.tanggal_berangkat</td>
                    <td>@user.harga</td>
                    <td>@user.username</td>
                    <td>@user.bangku</td>
                </tr>
            }
        }
    </tbody>
</table>

<button type="button" class="button-edit" role="button" onclick="location.href='@Url.Action("edit", "Home")'">Edit Pesanan</button>
<button type="button" class="button-hapus" role="button" onclick="location.href='@Url.Action("delete", "home")'">Hapus Pesanan</button>



